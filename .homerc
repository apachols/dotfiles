#
# FUNCTION TOWN
#

function ogg()
{
  ffmpeg -i "$1" -c:a libvorbis -qscale:a 3 output.ogg
}

function mp3()
{
  ffmpeg -i $1 -b:a 256000 newfilename.mp3
}

function goto() {
  if [ -d "$1" ]; then
    cd "$1"
  else
    cd "$(dirname $1)"
  fi
}

